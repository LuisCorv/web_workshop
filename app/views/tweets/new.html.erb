<div class="container">
    <h1>New Tweet</h1>


    <%= form_with model: @tweet do |f| %>
        <div class="form-row">
            <div class="form-group col-6">
                <%= f.text_field :body, placeholder: "Escriba aca su Tweet", class: "form-control"%>
            </div>

            <div class="form-group col-6">
                <%= f.text_field :hashtags, placeholder: "Escribe aca tus hashtags", class: "form-control mt-2"%>
            </div>
        </div>


        <%= f.submit "Guardar", class:"btn btn-primary mt-2" %>
    <%end  %>
</div>